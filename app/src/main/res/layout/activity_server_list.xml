<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServerList_Activity">
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/light_blue"
        style="@style/CustomCardViewStyle"
        app:cardElevation="10dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/backa" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/light_blue"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="Search Country"
                        android:singleLine="true"
                        android:layout_toStartOf="@id/searchView"
                        android:textColorHint="@color/white"/>
                    
                    <View
                        android:id="@+id/searchView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/search"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>




        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_blue"
        android:text="All Server"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/agfor22"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ServerRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/server_layout"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20sp"/>

</LinearLayout>